# Gold Trading Signal API - Environment Configuration
# Copy this file to .env and update the values as needed

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Model Configuration (Update these URLs with your actual model files)
MODEL_URL=https://github.com/yourusername/yourrepo/releases/download/v1/model.h5
SCALER_URL=https://github.com/yourusername/yourrepo/releases/download/v1/scaler.pkl

# Data Configuration
DATA_FILE=gold_processed_data.csv
UPDATE_INTERVAL_HOURS=1
SEQUENCE_LENGTH=60
PREDICTION_HOURS=5

# Feature Flags
FALLBACK_MODE=true
TENSORFLOW_ENABLED=true
ECONOMIC_DATA_ENABLED=false

# Logging
LOG_LEVEL=INFO

# External APIs (Optional)
# ALPHA_VANTAGE_API_KEY=your_api_key_here
# TRADINGVIEW_API_KEY=your_api_key_here